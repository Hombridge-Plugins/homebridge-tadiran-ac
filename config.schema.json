{
    "pluginAlias": "TadiranAC",
    "pluginType": "platform",
    "singular": true,
    "headerDisplay": "Homebridge plugin for Tadiran AC units controlled by the Tuya Smart app",
    "footerDisplay": "Created by @nitaybz",
    "schema": {
        "type": "object",
        "properties": {
            "devices": {
                "type": "array",
                "buttonText": "Add Device",
                "orderable": false,
                "buttonText": "Add Device",
                "expandable": false,
                "expanded": true,
                "items": [
                    {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "required": true
                            },
                            "id": {
                                "type": "string",
                                "required": true
                            },
                            "key": {
                                "type": "string",
                                "required": true
                            },
                            "minTemperature": {
                                "title": "Minimum Temperature",
                                "description": "Minimum Temperature to show in HomeKit",
                                "default": 16,
                                "type": "integer",
                                "minimum": 10,
                                "maximum": 35
                            },
                            "maxTemperature": {
                                "title": "Maximum Temperature",
                                "description": "Maximum Temperature to show in HomeKit",
                                "default": 32,
                                "type": "integer",
                                "minimum": 10,
                                "maximum": 35
                            },
                            "noSwing": {
                                "title": "Disable Swing",
                                "type": "boolean"
                            },
                            "noFanSpeed": {
                                "title": "Disable Fan Speeds",
                                "type": "boolean"
                            },
                            "noFan": {
                                "title": "Disable FAN Mode Accessory",
                                "description": "Disable FAN mode control - remove extra fan accessory",
                                "type": "boolean"
                            },
                            "noDry": {
                                "title": "Disable DRY Mode Accessory",
                                "description": "Disable DRY mode control - remove extra dehumidifier accessory",
                                "type": "boolean"
                            },
                            "noAuto": {
                                "title": "Disable AUTO Mode",
                                "description": "Disable AUTO mode control",
                                "type": "boolean"
                            },
                            "noCool": {
                                "title": "Disable COOL Mode",
                                "description": "Disable COOL mode control",
                                "type": "boolean"
                            },
                            "noHeat": {
                                "title": "Disable HEAT Mode",
                                "description": "Disable HEAT mode control",
                                "type": "boolean"
                            }
                        }
                    }
                ]
            }
        }
    }
  }